{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    
    "lib": ["esnext", "dom", "webworker"],
    "types": ["node", "vuetify", "vite-plugin-pwa/client"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.interfaces.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.webp",
    "vite.config.ts",
    "manifest.ts"
  ]
}
